<!--suppress XmlUnboundNsPrefix -->
<Configuration shutdownHook="disable" status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                pattern="%highlight{%d{dd/MM/yyyy HH:mm:ss} - [%-5level] --> (%logger{1}/%t) -> %msg%n}"/>
        </Console>
    </Appenders>
    <loggers>
        <Root level="all">
            <Appender-ref ref="Console"/>
        </Root>

        <Logger name="tk.jomp16" level="trace"/>

        <Logger name="com.github.andrewoma.kwery" level="debug"/>
        <Logger name="io.netty" level="error"/>
        <Logger name="com.zaxxer" level="error"/>
        <Logger name="com.zaxxer" level="error"/>
    </loggers>
</Configuration>
